#!/bin/bash


BUILD="build"
NAME="indicator-virtual-box"
VERSION=1.0.7

rm -rf $BUILD

mkdir -p $BUILD/$NAME-$VERSION
cp $NAME.desktop $BUILD/$NAME-$VERSION
cp build-debian $BUILD/$NAME-$VERSION

mkdir -p $BUILD/$NAME-$VERSION/src
cp src/indicator-virtual-box.py $BUILD/$NAME-$VERSION/src

mkdir -p $BUILD/$NAME-$VERSION/icons/elementary
cp icons/indicator-virtual-box-elementary.svg $BUILD/$NAME-$VERSION/icons/elementary/indicator-virtual-box.svg

mkdir -p $BUILD/$NAME-$VERSION/icons/hicolor
cp icons/indicator-virtual-box-hicolor.svg $BUILD/$NAME-$VERSION/icons/hicolor/indicator-virtual-box.svg

mkdir -p $BUILD/$NAME-$VERSION/icons/lubuntu
cp icons/indicator-virtual-box-lubuntu.svg $BUILD/$NAME-$VERSION/icons/lubuntu/indicator-virtual-box.svg

mkdir -p $BUILD/$NAME-$VERSION/icons/ubuntu-mono-dark
cp icons/indicator-virtual-box-ubuntu-mono-dark.svg $BUILD/$NAME-$VERSION/icons/ubuntu-mono-dark/indicator-virtual-box.svg

mkdir -p $BUILD/$NAME-$VERSION/icons/ubuntu-mono-light
cp icons/indicator-virtual-box-ubuntu-mono-light.svg $BUILD/$NAME-$VERSION/icons/ubuntu-mono-light/indicator-virtual-box.svg

cd $BUILD
tar -czf "${NAME}_${VERSION}.orig.tar.gz" $NAME-$VERSION
cd ..

mkdir -p $BUILD/$NAME-$VERSION/debian
cp -r packaging/debian $BUILD/$NAME-$VERSION

cd $BUILD/$NAME-$VERSION
debuild -S -sa 
cd ..
rm -rf $NAME-$VERSION

echo "Now run from the build directory: dput ppa:thebernmeister/${NAME} ${NAME}_${VERSION}-1_source.changes"
