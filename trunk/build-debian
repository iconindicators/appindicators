#!/bin/bash


BUILD="build"
NAME="indicator-ppa-download-statistics"
VERSION=1.0.3

rm -rf $BUILD

mkdir -p $BUILD/$NAME-$VERSION
cp $NAME.desktop $BUILD/$NAME-$VERSION
cp build-debian $BUILD/$NAME-$VERSION

mkdir -p $BUILD/$NAME-$VERSION/src
cp src/indicator-ppa-download-statistics.py $BUILD/$NAME-$VERSION/src

mkdir -p $BUILD/$NAME-$VERSION/icons/elementary
cp icons/indicator-ppa-download-statistics-elementary.svg $BUILD/$NAME-$VERSION/icons/elementary/indicator-ppa-download-statistics.svg

mkdir -p $BUILD/$NAME-$VERSION/icons/hicolor
cp icons/indicator-ppa-download-statistics-hicolor.svg $BUILD/$NAME-$VERSION/icons/hicolor/indicator-ppa-download-statistics.svg

mkdir -p $BUILD/$NAME-$VERSION/icons/lubuntu
cp icons/indicator-ppa-download-statistics-lubuntu.svg $BUILD/$NAME-$VERSION/icons/lubuntu/indicator-ppa-download-statistics.svg

cd $BUILD
tar -czf "${NAME}_${VERSION}.orig.tar.gz" $NAME-$VERSION
cd ..

mkdir -p $BUILD/$NAME-$VERSION/debian
cp -r packaging/debian $BUILD/$NAME-$VERSION

cd $BUILD/$NAME-$VERSION
debuild -S -sa 
cd ..
rm -rf $NAME-$VERSION

echo "Now run from the build directory: dput ppa:thebernmeister/${NAME} ${NAME}_${VERSION}-1_source.changes"
