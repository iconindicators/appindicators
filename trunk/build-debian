#!/bin/bash
#
# Build the DEBIAN source files for upload to LaunchPad PPA.
#
# Ensure the version number below also matches:
#	src/indicator-lunar.py
#	packaging/debian/changelog.  


VERSION="1.0.68"
NAME="indicator-lunar"

source=( $NAME".py" eclipse.py satellite.py )
hicolorIcons=( $NAME".svg" "indicator-lunar-satellite.svg" ) # List of hicolor icons belonging to the indicator (contents of the icons directory).
hicolorColours=( fff200 ) # List of colours present across ALL the hicolor icons.

. ../PythonUtils/build-debian-common
doStandardBuild source hicolorIcons hicolorColours