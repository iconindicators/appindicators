#!/bin/bash
#
# Build the DEBIAN source files for upload to LaunchPad PPA.
#
# Ensure the version number below also matches:
#	src/indicator-stardate.py
#	packaging/debian/changelog.  


VERSION="1.0.33"
NAME="indicator-stardate"

source=( $NAME".py" example.py stardate.py )
hicolorIcons=( $NAME".svg" ) # List of hicolor icons belonging to the indicator (contents of the icons directory).
hicolorColours=( fff200 000000 ) # List of colours present across ALL the hicolor icons.

. ../PythonUtils/build-debian-common
doStandardBuild source hicolorIcons hicolorColours